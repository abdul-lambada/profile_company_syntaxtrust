---
import "../styles/global.css";

interface Props {
    title: string;
    description?: string;
}

const {
    title,
    description = "Jasa Pembuatan Website & Sewa Sistem Informasi Keuangan Sekolah Profesional",
} = Astro.props;
---

<!doctype html>
<html lang="id">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title} | SyntaxTrust</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap"
            rel="stylesheet"
        />
        <style>
            body {
                font-family: "Plus Jakarta Sans", sans-serif;
            }
        </style>
    </head>
    <body class="overflow-x-hidden">
        <slot />

        <!-- WhatsApp Floating Button -->
        <a
            href="https://wa.me/628123456789"
            class="fixed bottom-6 right-6 z-50 bg-green-500 text-white p-4 rounded-full shadow-2xl hover:scale-110 transition-transform flex items-center gap-2 group"
            target="_blank"
        >
            <span
                class="max-w-0 overflow-hidden group-hover:max-w-xs transition-all duration-300 whitespace-nowrap"
                >Konsultasi Sekarang</span
            >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="lucide lucide-message-circle"
                ><path d="M7.9 20A9 9 0 1 0 4 16.1L2 22Z"></path><path
                    d="M8 12h.01"></path><path d="M12 12h.01"></path><path
                    d="M16 12h.01"></path></svg
            >
        </a>
    </body>
</html>
