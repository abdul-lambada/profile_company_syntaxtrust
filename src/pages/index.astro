---
import Layout from "../layouts/Layout.astro";
import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import Features from "../components/Features.astro";
import Comparison from "../components/Comparison.astro";
import Solution from "../components/Solution.astro";
import Stats from "../components/Stats.astro";
import Testimonials from "../components/Testimonials.astro";
import Pricing from "../components/Pricing.astro";
import FAQ from "../components/FAQ.astro";
import Footer from "../components/Footer.astro";
import ReportModal from "../components/ReportModal.astro";
import PromoBanner from "../components/PromoBanner.astro";
import ValueProp from "../components/ValueProp.astro";
import TrustBadges from "../components/TrustBadges.astro";
import ClientMap from "../components/ClientMap.astro";
import MobileApp from "../components/MobileApp.astro";
import DemoModal from "../components/DemoModal.astro";
import HowItWorks from "../components/HowItWorks.astro";
---

<Layout title="SIKES - Sistem Informasi Keuangan Sekolah">
	<PromoBanner />
	<Navbar />
	<main class="overflow-hidden">
		<Hero />
		<ValueProp />
		<ReportModal />
		<DemoModal />
		<Features />
		<Comparison />
		<MobileApp />
		<Solution />
		<HowItWorks />
		<Stats />
		<ClientMap />
		<TrustBadges />
		<Testimonials />
		<Pricing />
		<FAQ />

		<!-- CTA Section -->
		<section class="py-24 relative overflow-hidden">
			<div class="absolute inset-0 bg-emerald-600 -z-10"></div>
			<div
				class="absolute top-0 left-0 w-full h-full opacity-10 -z-10"
				style="background-image: radial-gradient(circle at 10% 20%, rgb(0, 0, 0) 0%, transparent 20%), radial-gradient(circle at 90% 80%, rgb(0, 0, 0) 0%, transparent 20%);"
			>
			</div>

			<div class="max-w-4xl mx-auto px-6 text-center">
				<h2
					class="text-4xl md:text-5xl font-bold text-white mb-8 leading-tight animate-fade-in"
				>
					Siap Modernisasi Keuangan Sekolah Anda?
				</h2>
				<p
					class="text-emerald-100 text-lg mb-12 animate-fade-in delay-100"
				>
					Bergabunglah dengan ratusan sekolah yang telah beralih ke
					pengelolaan digital yang transparan dan akuntabel.
				</p>
				<div
					class="flex flex-col sm:flex-row items-center justify-center gap-4 animate-fade-in delay-200"
				>
					<button
						class="open-demo-btn w-full sm:w-auto px-10 py-5 bg-white text-emerald-600 font-bold rounded-2xl shadow-2xl hover:bg-emerald-50 transition-all active:scale-95 text-lg text-center"
					>
						Daftar Sekarang
					</button>
					<button
						class="open-demo-btn w-full sm:w-auto px-10 py-5 bg-emerald-700 text-white font-bold rounded-2xl hover:bg-emerald-800 transition-all active:scale-95 text-lg text-center"
					>
						Jadwalkan Demo
					</button>
					<button
						class="w-full sm:w-auto px-10 py-5 bg-white/10 text-white font-bold rounded-2xl border border-white/20 hover:bg-white/20 transition-all active:scale-95 text-lg text-center flex items-center justify-center gap-2"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							class="w-6 h-6"
							fill="none"
							viewBox="0 0 24 24"
							stroke="currentColor"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z"
							></path>
						</svg>
						Unduh Proposal
					</button>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>
