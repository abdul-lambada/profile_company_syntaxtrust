  <script is:inline>
    // Logic for Category Tabs (Iconix Replication)
    document.addEventListener("DOMContentLoaded", () => {
      const tabs = document.querySelectorAll(".tab-btn");
      const title = document.getElementById("hero-title");
      const desc = document.getElementById("hero-desc");

      const content = {
        sekolah: {
          title: "Pendidikan Anda",
          desc: "Platform manajemen keuangan sekolah terpadu dengan standar keamanan enterprise untuk transparansi finansial institusi Anda.",
        },
        bisnis: {
          title: "Bisnis Modern",
          desc: "Transformasi operasional bisnis Anda dengan sistem informasi terintegrasi dan otomasi alur kerja yang efisien.",
        },
        umum: {
          title: "Layanan Publik",
          desc: "Hadirkan pengalaman digital terbaik bagi masyarakat melalui portal layanan publik yang cepat, aman, dan transparan.",
        },
      };

      tabs.forEach((tab) => {
        tab.addEventListener("click", () => {
          const cat = tab.dataset.cat;

          // Toggle UI state
          tabs.forEach((t) => {
            t.classList.remove("bg-syntax-accent", "text-white", "active");
            t.classList.add("text-gray-500");
          });
          tab.classList.add("bg-syntax-accent", "text-white", "active");
          tab.classList.remove("text-gray-500");

          // Update Content with animation
          if (title && desc) {
            title.style.opacity = "0";
            desc.style.opacity = "0";

            setTimeout(() => {
              title.innerText = content[cat].title;
              desc.innerText = content[cat].desc;
              title.style.opacity = "1";
              desc.style.opacity = "1";
            }, 300);
          }
        });
      });
    });
  </script>

