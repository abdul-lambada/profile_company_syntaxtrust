---
import Layout from "../layouts/Layout.astro";
import ContactForm from "../components/ContactForm.astro";

// Ambil data dinamis dari Backend PHP
const responseSekolah = await fetch(
  "http://localhost/profile_syntaxtrust/api/data.php?aksi=sekolah",
).catch(() => null);
const schoolClients: any[] = responseSekolah
  ? await responseSekolah.json()
  : [];

const responseWeb = await fetch(
  "http://localhost/profile_syntaxtrust/api/data.php?aksi=klien_web",
).catch(() => null);
const webClients: any[] = responseWeb ? await responseWeb.json() : [];

const responseMitra = await fetch(
  "http://localhost/profile_syntaxtrust/api/data.php?aksi=mitra",
).catch(() => null);
const partners: any[] = responseMitra ? await responseMitra.json() : [];
---

<Layout
  title="Berdayakan Bisnis Masa Depan"
  description="SyntaxTrust menyediakan sistem informasi keuangan sekolah unggulan dan jasa pembuatan website kustom dengan performa tinggi untuk bisnis masa depan."
>
  <!-- Hero Section -->
  <section
    class="relative min-h-screen flex items-center overflow-hidden pt-32 pb-20"
  >
    <!-- Interactive Background (Iconix Style) -->
    <div class="absolute inset-0 z-0">
      <div
        class="absolute top-[-20%] left-[-10%] w-[70%] h-[70%] bg-syntax-accent/20 rounded-full blur-[160px] opacity-40"
      >
      </div>
      <div
        class="absolute bottom-[-20%] right-[-10%] w-[80%] h-[80%] bg-[#000d26] rounded-full blur-[180px] opacity-60"
      >
      </div>

      <!-- Linear Mesh Pattern -->
      <div
        class="absolute inset-0 opacity-[0.15] bg-[linear-gradient(to_right,#ffffff10_1px,transparent_1px),linear-gradient(to_bottom,#ffffff10_1px,transparent_1px)] bg-[size:60px_60px]"
