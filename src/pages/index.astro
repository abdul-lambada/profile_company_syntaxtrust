            class="category-tabs inline-flex p-1.5 glass rounded-2xl mb-12 reveal-on-scroll"
          >
            <button
              class="tab-btn px-6 py-2.5 rounded-xl text-sm font-black transition-all active bg-syntax-accent text-white"
              data-cat="sekolah">Sekolah</button
            >
            <button
              class="tab-btn px-6 py-2.5 rounded-xl text-sm font-black transition-all text-gray-500 hover:text-white"
              data-cat="bisnis">Bisnis</button
