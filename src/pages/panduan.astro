---
import Layout from "../layouts/Layout.astro";

// Ambil data dinamis dari Backend PHP
const response = await fetch(
  "http://localhost/profile_syntaxtrust/api/data.php?aksi=produk",
).catch(() => null);
const products: any[] = response ? await response.json() : [];

// Ambil pengaturan situs
const resSettings = await fetch(
  "http://localhost/profile_syntaxtrust/api/data.php?aksi=pengaturan",
).catch(() => null);
const settings = resSettings
  ? await resSettings.json()
  : { wa_number: "628123456789" };
---

<Layout
  title="Pusat Panduan"
  description="Dapatkan panduan teknis, dokumentasi PDF, dan tutorial video 4K untuk menguasai ekosistem produk dan layanan dari SyntaxTrust secara mendalam."
>
  <!-- Header Section -->
  <section class="pt-48 pb-20 relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center max-w-4xl mx-auto">
        <span
          class="text-syntax-emerald font-black tracking-[0.4em] uppercase block mb-6 text-xs reveal-on-scroll"
          >Knowledge Base</span
        >
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-black mb-10 tracking-tighter leading-tight reveal-on-scroll"
        >
          Pelajari <span class="gradient-text">Ekosistem</span> Kami
        </h1>
        <p
          class="text-lg md:text-xl text-gray-400 leading-relaxed font-medium reveal-on-scroll"
          style="transition-delay: 200ms;"
        >
          Panduan komprehensif untuk membantu Anda menguasai setiap fitur dan
          kapabilitas produk SyntaxTrust.
        </p>
      </div>
    </div>
  </section>

  <!-- Resource List Section -->
  <section class="py-32 relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        {
          products.map((product, idx) => (
            <div
              class="group relative reveal-on-scroll"
              style={`transition-delay: ${idx * 200}ms;`}
            >
              <div class="absolute -inset-4 bg-syntax-emerald/5 blur-3xl opacity-0 group-hover:opacity-100 transition-opacity" />
              <div class="relative glass rounded-[3rem] border border-white/10 p-10 h-full flex flex-col hover:border-syntax-emerald/40 transition-all duration-500">
                <div class="flex items-center space-x-5 mb-8">
                  <div class="w-14 h-14 rounded-2xl bg-white/5 flex items-center justify-center text-syntax-emerald border border-white/10 group-hover:bg-syntax-emerald group-hover:text-white transition-all">
                    <svg
                      class="w-7 h-7"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke="currentColor"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2.5"
                        d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"
                      />
                    </svg>
                  </div>
                  <div>
                    <span class="text-[10px] font-black text-syntax-emerald uppercase tracking-[0.3em] mb-1 block">
                      EDUKASI {product.kategori}
                    </span>
                    <h3 class="text-2xl font-black tracking-tighter text-white">
                      {product.nama}
                    </h3>
                  </div>
                </div>

                <p class="text-gray-400 mb-10 leading-relaxed font-medium flex-grow">
                  {product.deskripsi ||
                    `Dapatkan akses penuh ke dokumentasi teknis dan seri tutorial video untuk memaksimalkan penggunaan ${product.nama}.`}
                </p>

                <div class="space-y-4">
                  {product.file_panduan && (
                    <a
                      href={`http://localhost/profile_syntaxtrust/admin/${product.file_panduan}`}
                      target="_blank"
                      class="flex items-center justify-between p-5 rounded-2xl bg-white/5 border border-white/5 hover:bg-white/10 hover:border-white/20 transition-all group/link"
                    >
                      <div class="flex items-center space-x-4">
                        <div class="w-10 h-10 rounded-xl bg-red-500/10 flex items-center justify-center text-red-500">
                          <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path d="M7 2a2 2 0 00-2 2v16a2 2 0 002 2h10a2 2 0 002-2V4a2 2 0 00-2-2H7zm0 2h10v16H7V4zm2 4v2h6V8H9zm0 4v2h6v-2H9zm0 4v2h4v-2H9z" />
                          </svg>
                        </div>
                        <span class="font-bold text-white">
                          Panduan Teknis (PDF)
                        </span>
                      </div>
                      <svg
                        class="w-5 h-5 text-gray-600 group-hover/link:translate-x-1 transition-transform"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2.5"
                          d="M14 5l7 7m0 0l-7 7m7-7H3"
                        />
                      </svg>
                    </a>
                  )}

                  {product.id_youtube && (
                    <a
                      href={`https://youtube.com/watch?v=${product.id_youtube}`}
                      target="_blank"
                      class="flex items-center justify-between p-5 rounded-2xl bg-white/5 border border-white/5 hover:bg-white/10 hover:border-white/20 transition-all group/link"
                    >
                      <div class="flex items-center space-x-4">
                        <div class="w-10 h-10 rounded-xl bg-red-600/10 flex items-center justify-center text-red-600">
                          <svg
                            class="w-5 h-5"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 4-8 4z" />
                          </svg>
                        </div>
                        <span class="font-bold text-white">
                          Video Tutorial (YouTube)
                        </span>
                      </div>
                      <svg
                        class="w-5 h-5 text-gray-600 group-hover/link:translate-x-1 transition-transform"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2.5"
                          d="M14 5l7 7m0 0l-7 7m7-7H3"
                        />
                      </svg>
                    </a>
                  )}
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Support CTA -->
  <section class="py-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-4xl font-black text-white mb-8 tracking-tighter">
        Masih Memiliki Pertanyaan?
      </h2>
      <p class="text-gray-400 text-lg mb-12">
        Tim dukungan teknis kami siap membantu Anda 24/7 melalui berbagai
        saluran komunikasi.
      </p>
      <div class="flex flex-wrap justify-center gap-6">
        <a
          href={`https://wa.me/${settings.wa_number}`}
          class="px-8 py-4 glass rounded-2xl font-bold hover:bg-white/5 transition-all border border-white/10 text-white"
          >Hubungi Support</a
        >
        <a
          href="#"
          class="px-8 py-4 glass rounded-2xl font-bold hover:bg-white/5 transition-all border border-white/10 text-white"
          >Komunitas</a
        >
      </div>
    </div>
  </section>
</Layout>
