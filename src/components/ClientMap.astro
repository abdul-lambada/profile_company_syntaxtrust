                        <g transform={`translate(${m.x}, ${m.y})`}>
                            <circle
                                r="6"
                                class="fill-emerald-400/40 animate-ping"
                                style={`animation-delay: ${m.d}s`}
                            />
                            <circle
                                r="4"
                                class="fill-white stroke-2 stroke-emerald-500"
                            />
                        </g>
                    ))
                }
