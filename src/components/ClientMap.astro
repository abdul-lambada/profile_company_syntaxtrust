<section
    id="client-map"
    class="py-24 bg-[#0a46bd] relative overflow-hidden text-center"
>
    <!-- Decorative Background -->
    <div class="absolute inset-0 opacity-5 pointer-events-none">
        <div
            class="absolute top-0 left-0 w-full h-full"
            style="background-image: radial-gradient(circle at 50% 50%, white 0.5px, transparent 0.5px); background-size: 30px 30px;"
        >
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="mb-12">
            <h2
                class="text-3xl md:text-5xl font-bold text-white mb-6 animate-fade-in tracking-tight"
            >
                Telah Digunakan Berbagai Sekolah di Indonesia
            </h2>
            <p
                class="text-white/80 text-lg max-w-2xl mx-auto animate-fade-in delay-100"
