<section class="py-24 bg-slate-900 overflow-hidden relative">
    <!-- Grid Pattern -->
    <div
        class="absolute inset-0 opacity-[0.03]"
        style="background-image: linear-gradient(#fff 1px, transparent 1px), linear-gradient(90deg, #fff 1px, transparent 1px); background-size: 40px 40px;"
    >
    </div>

    <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="text-center mb-20 flex flex-col items-center">
            <span
                class="text-emerald-400 font-bold text-sm uppercase tracking-widest bg-emerald-400/10 px-4 py-1 rounded-full mb-4 inline-block"
                >Security First</span
            >
            <h2 class="text-4xl font-bold text-white mb-4">
                Aman & Terpercaya
            </h2>
            <p class="text-slate-400 max-w-xl">
                Kami menggunakan standar keamanan terkini untuk menjaga data
                penting sekolah Anda.
            </p>
        </div>

        <div class="grid md:grid-cols-4 gap-8">
            {
                [
                    {
                        label: "Uptime",
                        value: "99.9%",
                        desc: "Sistem selalu siap melayani",
                    },
                    {
                        label: "Enkripsi Data",
                        value: "AES-256",
                        desc: "Metode enkripsi standar militer",
                    },
                    {
                        label: "Keamanan",
                        value: "OWASP",
                        desc: "Patuh terhadap top 10 OWASP",
                    },
                    {
                        label: "Backup",
                        value: "24/7",
                        desc: "Pencadangan data berkala",
                    },
                ].map((stat) => (
                    <div class="text-center p-8 rounded-3xl bg-white/5 border border-white/10 backdrop-blur-sm group hover:bg-white/10 transition-all">
                        <div class="text-3xl font-bold text-white mb-2 group-hover:scale-110 transition-transform">
                            {stat.value}
                        </div>
                        <div class="text-emerald-400 font-bold text-sm mb-2">
                            {stat.label}
                        </div>
                        <div class="text-slate-400 text-xs">{stat.desc}</div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
