                    <!-- Screen Content -->
                    <div
                        class="w-full h-full bg-slate-50 rounded-[32px] overflow-hidden relative"
                    >
                        <!-- App Header -->
                        <div
                            class="bg-indigo-600 p-6 pt-12 pb-8 text-white rounded-b-3xl shadow-lg"
                        >
