---
const steps = [
    {
        num: "01",
        title: "Registrasi & Setup",
        desc: "Daftarkan sekolah Anda dan kustomisasi  pos-pos pembayaran (SPP, Gedung, Seragam) sesuai kebutuhan.",
        icon: "M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
    },
    {
        num: "02",
        title: "Migrasi Data Siswa",
        desc: "Import data siswa dan tagihan lama dengan satu klik menggunakan template Excel yang kami sediakan.",
        icon: "M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"
    },
    {
        num: "03",
        title: "Aktivasi WhatsApp",
        desc: "Hubungkan nomor WhatsApp sekolah untuk fitur notifikasi tagihan dan bukti pembayaran otomatis.",
        icon: "M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"
    },
    {
        num: "04",
        title: "Go Digital!",
        desc: "Sistem siap digunakan. Wali murid bayar via transfer, dan laporan keuangan sekolah tercatat otomatis.",
        icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
    }
];
---

<section id="how-it-works" class="py-24 bg-slate-50 relative overflow-hidden">
    <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="text-center mb-16 flex flex-col items-center">
            <span class="text-indigo-600 font-bold text-sm uppercase tracking-widest bg-indigo-50 px-4 py-1 rounded-full mb-4 inline-block">Langkah Mudah</span>
            <h2 class="text-4xl font-bold text-slate-900 mb-4">4 Langkah Menuju Sekolah Digital</h2>
            <p class="text-slate-600 max-w-xl text-lg">
                Tidak perlu pusing dengan hal teknis. Tim kami juga siap membantu Anda dalam proses migrasi data.
            </p>
        </div>

        <div class="relative grid md:grid-cols-4 gap-8">
            <!-- Connecting Line (Desktop) -->
            <div class="hidden md:block absolute top-12 left-0 w-full h-0.5 bg-slate-200 -z-10"></div>
            
            {steps.map((step, i) => (
                <div class="relative flex flex-col items-center text-center group">
                    <div class="w-24 h-24 bg-white rounded-full border-4 border-slate-100 flex items-center justify-center mb-6 group-hover:border-indigo-100 group-hover:scale-110 transition-all duration-300 shadow-sm z-10 relative">
                        <div class="w-16 h-16 bg-indigo-600 text-white rounded-full flex items-center justify-center shadow-lg shadow-indigo-500/30">
                            <span class="font-bold text-xl">{step.num}</span>
                        </div>
                        
                        <!-- Icon Bubble -->
                        <div class="absolute -top-2 -right-2 w-10 h-10 bg-white rounded-full border border-slate-100 flex items-center justify-center text-indigo-600 shadow-sm">
                            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={step.icon} />
                            </svg>
                        </div>
                    </div>
                    
                    <h3 class="text-xl font-bold text-slate-900 mb-3">{step.title}</h3>
                    <p class="text-slate-600 text-sm leading-relaxed px-2">{step.desc}</p>
                </div>
            ))}
        </div>

        <div class="mt-16 text-center">
             <button class="open-demo-btn px-8 py-4 bg-indigo-600 text-white font-bold rounded-2xl hover:bg-indigo-700 transition-all shadow-xl shadow-indigo-500/20 active:scale-95">
                Mulai Migrasi Sekarang
            </button>
        </div>
    </div>
</section>
